<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ngo_register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"

                tools:srcCompat="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="160dp"
                android:text="Registration"
                android:textColor="@color/light"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/namengo"
                android:layout_width="300dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="250dp"
                android:autofillHints=""
                android:background="@drawable/border"
                android:ems="10"
                android:hint="Enter NGO name"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="20dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/emailngo"
                android:layout_width="300dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="310dp"
                android:autofillHints=""
                android:background="@drawable/border"
                android:ems="10"
                android:hint="Enter Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:paddingRight="20dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/phonenongo"
                android:layout_width="300dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="370dp"
                android:autofillHints=""
                android:background="@drawable/border"
                android:ems="10"
                android:hint="Enter Phone no"
                android:inputType="phone"
                android:paddingLeft="15dp"
                android:paddingRight="20dp"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/addressngo"
                android:layout_width="300dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="420dp"
                android:autofillHints=""
                android:background="@drawable/border"
                android:ems="10"
                android:hint="Enter Address"
                android:inputType="textPostalAddress"
                android:paddingLeft="15dp"
                android:paddingRight="20dp"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="490dp"
                android:gravity="center_horizontal"
                android:text="I Agree On Let's Educate"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.797" />

            <TextView
                android:id="@+id/tc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="515dp"
                android:layout_marginRight="15dp"
                android:text="Terms &amp; Condition"
                android:textColor="@color/blue"
                android:textSize="20sp" />


            <Button
                android:id="@+id/submitngo"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="570dp"
                android:background="@drawable/borderbutton"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>
    </ScrollView>


</RelativeLayout>