<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register_Teacher">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"

            tools:srcCompat="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="160dp"
            android:text="Registration"
            android:textColor="@color/light"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:text="Persional Details :"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp" />

        <EditText
            android:id="@+id/fname"
            android:layout_width="300dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="250dp"
            android:autofillHints=""
            android:background="@drawable/border"
            android:ems="10"
            android:hint="Enter First name"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/lname"
            android:layout_width="300dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="310dp"
            android:autofillHints=""
            android:background="@drawable/border"
            android:ems="10"
            android:hint="Enter Last name"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/phone_no"
            android:layout_width="300dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="370dp"
            android:autofillHints=""
            android:background="@drawable/border"
            android:ems="10"
            android:hint="Enter Phone number"
            android:inputType="phone"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:textSize="20sp" />



            <EditText
                android:id="@+id/address"
                android:layout_width="300dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="550dp"
                android:autofillHints=""
                android:background="@drawable/border"
                android:ems="10"
                android:hint="Enter Your Address"
                android:inputType="textPostalAddress"
                android:paddingLeft="15dp"
                android:paddingRight="20dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/qualification"
                android:layout_width="300dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="610dp"
                android:autofillHints=""
                android:background="@drawable/border"
                android:ems="10"
                android:hint="Enter Qualification"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="20dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/intrest"
                android:layout_width="300dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="670dp"
                android:autofillHints=""

                android:background="@drawable/border"
                android:ems="10"
                android:hint="Enter Area Of Intrest"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="20dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/skill_knowledge"
                android:layout_width="300dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="730dp"
                android:autofillHints=""
                android:background="@drawable/border"
                android:ems="10"
                android:hint="Enter Skill &amp; Knowlege"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="20dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/subject"
                android:layout_width="300dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="790dp"
                android:autofillHints=""
                android:background="@drawable/border"
                android:ems="10"
                android:hint="Enter Subject You Taught"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="20dp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/submit11"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="850dp"
                android:background="@drawable/borderbutton"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="900dp"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="960dp"
                android:text="" />
        </FrameLayout>


    </ScrollView>


</RelativeLayout>